   <section class="listeFournitures">
		<div class="container">
			<div class="row">
				<div class="padding-right">
					<div class="features_items">
					   <h2 class="titre_page">Commander des fournitures</h2>
					   <div class="col-sm-7">
					    <br/>
						<br/>
					    <div class="gallery">
                         <div class="img-w"><img src="{{asset('images/gallery/pic1.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic2.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic3.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic4.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic5.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic6.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic7.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic8.png')}}" alt="" /></div>
                         <div class="img-w"><img src="{{asset('images/gallery/pic9.png')}}" alt="" /></div>
                        </div>
					   </div>
					   <div class="col-sm-5">
					    <form method="post" enctype="multipart/form-data" >
						<br/>
						<p style="margin-bottom: 16px;">
					     <span class="gite">gite</span>.<span class="buro">buro</span> vous permet de commander les fournitures qui vous voulez .
						</p>
						<div class="form-group">
                            {{form_label(form.nom)}}
                            {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.nom) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.nom)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="form-group">
                            {{form_label(form.email)}}
                            {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.email) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.email)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="form-group">
                            {{form_label(form.telephone)}}
                            {{form_widget(form.telephone,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.telephone) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.telephone)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="form-group">
                            {{form_label(form.NbrCommande)}}
                            {{form_widget(form.NbrCommande,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.NbrCommande) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.NbrCommande)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="form-group">
                            {{form_label(form.institut)}}
                            {{form_widget(form.institut,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.institut) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.institut)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="form-group">
                            {{form_label(form.niveau)}}
                            {{form_widget(form.niveau,{'attr':{'class':'form-control'}})}}
                            {% if form_errors(form.niveau) %}
                            <div class="alert alert-danger">
                            {{form_errors(form.niveau)}}
                            </div>
                            {% endif %}
                        </div>
						<div class="row" style="padding-left:3%;">
                            <label class="customcheck col-sm-3">
                            <span>{{form_label(form.livres)}}</span>
                            {{form_widget(form.livres,{'attr':{'type':'checkbox'}})}}
                              <span class="checkmark"></span>
                            </label>
							<label class="customcheck col-sm-4">
                            <span>{{form_label(form.cahiers)}}</span>
                            {{form_widget(form.cahiers,{'attr':{'type':'checkbox'}})}}
                              <span class="checkmark"></span>
                            </label>
							<label class="customcheck col-sm-4">
                            <span>{{form_label(form.fournitures)}}</span>
                            {{form_widget(form.fournitures,{'attr':{'type':'checkbox'}})}}
                              <span class="checkmark"></span>
                        </label>
                        </div>
						<label class="customcheck">
                            <span>{{form_label(form.confirmationCondition)}}</span>
                            {{form_widget(form.confirmationCondition,{'attr':{'type':'checkbox'}})}}
                              <span class="checkmark"></span>
                        </label>
						<label class="customcheck">
                            <span>{{form_label(form.recevoirOffres)}}</span>
                            {{form_widget(form.recevoirOffres,{'attr':{'type':'checkbox'}})}}
                              <span class="checkmark"></span>
                        </label>
						<p>* Les champs marqués d'une étoile doivent être renseignés.</p>
                        {{ form_rest(form) }}
						</form>
					   </div>
